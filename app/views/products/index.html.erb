<h3>Products</h3>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4">
      <h4><%= product.name %></h4>
      <p><%= number_to_currency product.price %></p>
      <p><%= link_to "#{product.name} details", product_path(product), id: product.name, remote: true %></p>

      <div class="<%= product.id %>">
        <%= form_for @order_item, method: :post, remote: true do |f| %>
          <%= f.hidden_field :product_id, value: product.id %>

          <span id="<%= product.id %>"></span>
          <%= f.number_field :quantity, placeholder: "add desired quantity", min: 1 %></span>
          <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>
